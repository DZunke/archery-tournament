{% extends 'base.html.twig' %}

{% block title %}Create Archery Ground Â· Archery Tournament{% endblock %}

{% block body %}
<section class="page-header">
    <div>
        <h1>Create Archery Ground</h1>
        <p>Give the ground a name. You can add lanes and targets next.</p>
    </div>
    <div>
        <a class="button ghost" href="{{ path('archery_ground_index') }}">
            {{ ux_icon('lucide:arrow-left', {class: 'icon'}) }}
            <span>Back</span>
        </a>
    </div>
</section>

<div class="card">
    <form method="post" class="form">
        <input type="hidden" name="_token" value="{{ csrf_token('archery_ground_create') }}">
        <label class="field">
            <span>Name</span>
            <input type="text" name="name" placeholder="e.g. Forest Range" required>
        </label>
        {% if error %}
            <p class="form-error">{{ error }}</p>
        {% endif %}
        <button class="button" type="submit">
            {{ ux_icon('lucide:plus', {class: 'icon'}) }}
            <span>Create ground</span>
        </button>
    </form>
</div>
{% endblock %}
