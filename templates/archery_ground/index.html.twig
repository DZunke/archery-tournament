{% extends 'base.html.twig' %}

{% block title %}Archery Grounds Â· Archery Tournament{% endblock %}

{% block body %}
<section class="page-header">
    <div>
        <h1>Archery Grounds</h1>
        <p>Create and manage shooting ranges, lanes, and target inventory.</p>
    </div>
    <div>
        <a class="button" href="{{ path('archery_ground_new') }}">
            {{ ux_icon('lucide:plus', {class: 'icon'}) }}
            <span>New Ground</span>
        </a>
    </div>
</section>

{% if grounds is empty %}
    <div class="empty-state">
        <h2>No archery grounds yet</h2>
        <p>Start by creating your first ground and then add lanes and targets.</p>
        <a class="button" href="{{ path('archery_ground_new') }}">Create the first ground</a>
    </div>
{% else %}
    <div class="grid tournament-grid">
        {% for ground in grounds %}
            <article class="card tournament-card">
                <div class="tournament-card__top">
                    <div>
                        <h2>{{ ground.name }}</h2>
                        <p class="muted meta-line">
                            {{ ux_icon('lucide:hash', {class: 'icon'}) }}
                            <span>{{ ground.id|slice(0, 8) }}</span>
                        </p>
                    </div>
                </div>
                <div class="tournament-card__stats">
                    <div class="tournament-card__stat">
                        <strong>{{ ground.shootingLanes|length }}</strong>
                        <span>Lanes</span>
                    </div>
                    <div class="tournament-card__stat">
                        <strong>{{ ground.targetStorage|length }}</strong>
                        <span>Targets</span>
                    </div>
                </div>
                <div class="tournament-card__actions">
                    <a class="button ghost" href="{{ path('archery_ground_show', {id: ground.id}) }}">
                        {{ ux_icon('lucide:settings', {class: 'icon'}) }}
                        <span>Manage</span>
                    </a>
                    <a class="button ghost" href="{{ path('tournament_new', {archery_ground_id: ground.id}) }}">
                        {{ ux_icon('lucide:trophy', {class: 'icon'}) }}
                        <span>Create tournament</span>
                    </a>
                </div>
            </article>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}
