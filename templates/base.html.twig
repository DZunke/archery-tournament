<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Archery Tournament Generator{% endblock %}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href="/styles/app.css">
</head>
<body>
    <header class="site-header">
        <div class="container header-inner">
            <div>
                <div class="brand">Archery Tournament</div>
                <div class="brand-sub">Grounds, lanes, targets</div>
            </div>
            <nav class="nav">
                {% if app.user %}
                    <a href="{{ path('archery_ground_index') }}">
                        {{ ux_icon('lucide:map', {class: 'icon'}) }}
                        <span>Archery Grounds</span>
                    </a>
                    <a href="{{ path('tournament_index') }}">
                        {{ ux_icon('lucide:trophy', {class: 'icon'}) }}
                        <span>Tournaments</span>
                    </a>
                    <a href="{{ path('archery_ground_new') }}">
                        {{ ux_icon('lucide:plus', {class: 'icon'}) }}
                        <span>Create Ground</span>
                    </a>
                    <a href="{{ path('app_logout') }}">
                        {{ ux_icon('lucide:log-out', {class: 'icon'}) }}
                        <span>Log out</span>
                    </a>
                {% endif %}
            </nav>
        </div>
    </header>

    <main class="container main">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash flash-{{ label }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}
        {% block body %}{% endblock %}
    </main>

    <footer class="site-footer">
        <div class="container">
            <span>Archery Tournament Generator Â· Early Stage</span>
        </div>
    </footer>
</body>
</html>
